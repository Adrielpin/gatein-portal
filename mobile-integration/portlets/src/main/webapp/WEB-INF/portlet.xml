<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
   http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
   
   <!-- Responsive Banner Portlet -->
    <portlet>
        <description>Responsive Banner Portlet</description>
        <portlet-name>ResponsiveBannerPortlet</portlet-name>
        <display-name>Responsive Banner Portlet</display-name>
        <portlet-class>org.gatein.portlet.responsive.banner.BannerPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <resource-bundle>locale.portlet.responsivebanner</resource-bundle>
        <portlet-info>
            <title>GateIn Responsive Banner Portlet</title>
            <short-title>Banner Portlet</short-title>
            <keywords>System</keywords>
        </portlet-info>
    </portlet>
    
    <!-- Responsive Community Portlet -->
    <portlet>
        <description>Responsive Community Portlet</description>
        <portlet-name>ResponsiveCommunityPortlet</portlet-name>
        <display-name>Responsive Community Portlet</display-name>
        <portlet-class>org.gatein.portlet.responsive.community.CommunityPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        
        <supported-locale>en</supported-locale>
        <resource-bundle>locale.portlet.responsivecommunity</resource-bundle>
        
        <portlet-info>
            <title>GateIn Responsive Community Portlet</title>
            <short-title>Community Portlet</short-title>
            <keywords>System</keywords>
        </portlet-info>

        <portlet-preferences>
            <preference>
                <name>url.rss.blog</name>
                <value>https://community.jboss.org/community/feeds/blogs?community=2183</value>
            </preference>
            <preference>
                <name>url.rss.vimeo</name>
                <value>http://vimeo.com/channels/gatein/videos/rss</value>
            </preference>

            <preference>
                <name>url.blog</name>
                <value>https://community.jboss.org/en/gatein?view=blog#/?tagSet=undefined</value>
            </preference>
            <preference>
                <name>url.vimeo</name>
                <value>https://vimeo.com/channels/gatein/</value>
            </preference>

            <preference>
                <name>pfx.url.author</name>
                <value>https://community.jboss.org/</value>
            </preference>

            <preference>
                <name>url.jira</name>
                <value>https://issues.jboss.org/browse/GTNPORTAL</value>
            </preference>
            <preference>
                <name>url.contribute</name>
                <value>https://community.jboss.org/wiki/ContributingToGateIn</value>
            </preference>

            <preference>
                <name>url.docs</name>
                <value>https://docs.jboss.org/author/display/GTNPORTALDOC/Home</value>
            </preference>
        </portlet-preferences>
    </portlet>
    
    <!-- Responsive Features Portlet -->
    <portlet>
        <description>Responsive Features Portlet</description>
        <portlet-name>ResponsiveFeaturesPortlet</portlet-name>
        <display-name>Responsive Features Portlet</display-name>
        <portlet-class>org.gatein.portlet.responsive.features.FeaturesPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <resource-bundle>locale.portlet.responsivefeatures</resource-bundle>
        <portlet-info>
            <title>GateIn Responsive Features Portlet</title>
            <short-title>Features Portlet</short-title>
            <keywords>System</keywords>
        </portlet-info>
        <portlet-preferences>
            <preference>
                <name>features.title</name>
                <value>gateinFeatures</value>
            </preference>
            <preference>
                <name>features.list</name>
                <value>sso, nui, ps</value>
            </preference>
        </portlet-preferences>
    </portlet>
    
    <!-- Responsive Footer Portlet -->
    <portlet>
        <description>Responsive Footer Portlet</description>
        <portlet-name>ResponsiveFooterPortlet</portlet-name>
        <display-name>Responsive Footer Portlet</display-name>
        <portlet-class>org.gatein.portlet.responsive.footer.FooterPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <resource-bundle>locale.portlet.responsivefooter</resource-bundle>
        <portlet-info>
            <title>GateIn Responsive Footer Portlet</title>
            <short-title>Footer Portlet</short-title>
            <keywords>System</keywords>
        </portlet-info>
    </portlet>
    
    <!-- Responsive Header Portlet -->
    <portlet>
        <description>Responsive Header Portlet</description>
        <portlet-name>ResponsiveHeaderPortlet</portlet-name>
        <display-name>Responsive Header Portlet</display-name>
        <portlet-class>org.gatein.portlet.responsive.header.HeaderPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <resource-bundle>locale.portlet.responsiveheader</resource-bundle>
        <portlet-info>
            <title>GateIn Responsive Header Portlet</title>
            <short-title>Header Portlet</short-title>
            <keywords>System</keywords>
        </portlet-info>
        <portlet-preferences>
            <preference>
                <name>enable.dashboard.link</name>
                <value>true</value>
            </preference>
            <preference>
                <name>enable.grouppages.link</name>
                <value>true</value>
            </preference>
            <preference>
                <name>level</name>
                <value>2</value>
            </preference>
        </portlet-preferences>
    </portlet>
    
    <!-- Responsive Navigation Portlet -->
    <portlet>
        <description>Responsive Navigation Portlet</description>
        <portlet-name>ResponsiveNavigationPortlet</portlet-name>
        <display-name>Responsive Navigation Portlet</display-name>
        <portlet-class>org.gatein.portlet.responsive.navigation.NavigationPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>
        <resource-bundle>locale.portlet.responsivenavigation</resource-bundle>
        <portlet-info>
            <title>GateIn Responsive Navigation Portlet</title>
            <short-title>Navigation Portlet</short-title>
            <keywords>System</keywords>
        </portlet-info>

        <portlet-preferences>
          <preference>
            <name>ShowEmptyCategories</name>
            <value>true</value>
          </preference>
        </portlet-preferences>
    </portlet>
    
</portlet-app>
