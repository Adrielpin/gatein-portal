<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.gatein.portal</groupId>
    <artifactId>portal</artifactId>
    <version>4.0.0-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>portal.packaging</artifactId>
  <packaging>jar</packaging>
  <name>GateIn Portal Packaging Module</name>

  <properties>
    <org.apache.tomcat.version>7.0.37</org.apache.tomcat.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>javax.portlet</groupId>
      <artifactId>portlet-api</artifactId>
      <version>2.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.gatein.portal</groupId>
      <artifactId>portal.markdown</artifactId>
    </dependency>
    <dependency>
      <groupId>org.tautua.markdownpapers</groupId>
      <artifactId>markdownpapers-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.gatein.portal</groupId>
      <artifactId>examples.portlets</artifactId>
      <type>war</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>tomcat</id>
      <activation>
        <property>
          <name>!no.tomcat7</name>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.gatein.portal</groupId>
          <artifactId>portal.web</artifactId>
          <type>war</type>
          <classifier>tomcat-portal</classifier>
        </dependency>
        <dependency>
          <groupId>org.apache.tomcat</groupId>
          <artifactId>tomcat</artifactId>
          <version>${org.apache.tomcat.version}</version>
          <type>tar.gz</type>
        </dependency>
        <dependency>
          <groupId>org.gatein.portal</groupId>
          <artifactId>portal.root</artifactId>
          <version>${project.version}</version>
          <type>war</type>
          <scope>provided</scope>
        </dependency>
      </dependencies>
      <build>
        <plugins>

          <!-- Package tomcat-portal -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>war</goal>
                </goals>
                <phase>package</phase>
                <configuration>
                  <overlays>
                    <overlay>
                      <groupId>org.gatein.portal</groupId>
                      <artifactId>portal.web</artifactId>
                      <classifier>tomcat-portal</classifier>
                    </overlay>
                  </overlays>
                  <classifier>tomcat-portal</classifier>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- Package for tomcat -->
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <configuration>
              <attach>true</attach>
            </configuration>
            <executions>
              <execution>
                <goals>
                  <goal>single</goal>
                </goals>
                <phase>package</phase>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/tomcat-distrib.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- Executable tomcat -->
          <plugin>
            <groupId>org.apache.tomcat.maven</groupId>
            <artifactId>tomcat7-maven-plugin</artifactId>
            <version>2.1</version>
            <executions>
              <execution>
                <goals>
                  <goal>exec-war-only</goal>
                </goals>
                <phase>package</phase>
                <configuration>
                  <attachArtifact>false</attachArtifact>
                  <warRunDependencies>
                    <warRunDependency>
                      <dependency>
                        <groupId>org.gatein.portal</groupId>
                        <artifactId>portal.root</artifactId>
                        <version>${project.version}</version>
                        <type>war</type>
                      </dependency>
                      <contextPath>/</contextPath>
                    </warRunDependency>
                    <warRunDependency>
                      <dependency>
                        <groupId>org.gatein.portal</groupId>
                        <artifactId>portal.packaging</artifactId>
                        <version>${project.version}</version>
                        <classifier>tomcat-portal</classifier>
                        <type>war</type>
                      </dependency>
                      <contextPath>/portal</contextPath>
                    </warRunDependency>
                    <warRunDependency>
                      <dependency>
                        <groupId>org.gatein.portal</groupId>
                        <artifactId>examples.portlets</artifactId>
                        <version>${project.version}</version>
                        <type>war</type>
                      </dependency>
                      <contextPath>/samples</contextPath>
                    </warRunDependency>
                  </warRunDependencies>
                  <extraDependencies>
                    <extraDependency>
                      <groupId>javax.portlet</groupId>
                      <artifactId>portlet-api</artifactId>
                      <version>2.0</version>
                    </extraDependency>
                  </extraDependencies>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
