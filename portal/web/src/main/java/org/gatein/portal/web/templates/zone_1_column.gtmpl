<div class="row-fluid">
  <div id="1" class="span12 sortable <%=l1==null || l1.isEmpty() ? 'emptyContainer' : '' %>" >
    <% l1.each { name, fragment -> %>
    <div id="${name}" class="window">
        <h3 style="${cursor}" title="${tooltip}">${icon} <span class="title">${fragment.title}</span>
            <% if (editing) { %><button class="close" type="button">x</button> <% } %>
        </h3>
        <div class="content">${fragment.content}</div>
    </div>
    <% } %>
   </div>
</div>
